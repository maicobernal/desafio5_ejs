<h2 class="center h__md">Producto al azar elegido para usted</h2>
<% if (productorandom){ %>
<div class="table-responsive">
    <table class="table table-sm table-hover table-striped">
        <thead class="t-head-light">
            <tr class="p__md--strong center">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody class="center">
            <tr>
                <td>
                    <%=productorandom.title%>
                </td>
                <td>
                    <%=productorandom.price%>
                </td>
                <td>
                    <img src=<%=productorandom.thumbnail%> width="50" height="50">
                </td>
            </tr>
        </tbody>
    </table>
</div>
<%}else{%>
<h3 class="alert alert-danger">No se encontraron productos</h1>
    <%}%>